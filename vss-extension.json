{
    "manifestVersion": 1.0,
    "id": "vsts-extensions-product-selector",
    "version": "2.2.26.8",
    "name": "Product Selector",
    "description": "A work item form control which allows selection of products.",
    "public": false,
    "publisher": "davidcorrigan2",
    "icons": {
        "default": "img/logo.png"
    },
    "categories": [
        "Azure Boards"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "files": [
        {
            "path": "dist",
            "addressable": true
        },
        {
        "path": "img",
        "addressable": true
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "lib"
        }
    ],
    "repository": {
        "type": "git",
        "uri": "https://ni.visualstudio.com/DefaultCollection/Users/_git/dcorriga-product-version-selector"
    },
    "links": {
        "repository": {
            "uri": "https://ni.visualstudio.com/DefaultCollection/Users/_git/dcorriga-product-version-selector"
        },
        "issues": {
            "uri": "https://ni.visualstudio.com/DefaultCollection/Users/_git/dcorriga-product-version-selector"
        }
    },
    "tags": [
        "Work Items",
        "Extensions",
        "Work Item Control",
        "Multivalue Control",
        "Products",
        "NI"
    ],
    "content": {
        "details": {
            "path": "readme.md"
        }
    },
    "scopes": [
        "vso.work"
    ],
    "contributions": [
		{
            "id": "form-selector-control",
            "type": "ms.vss-work-web.work-item-form-control",
            "description": "A work item form control which allows selection of an NI Product.",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Product Selector Control",
                "uri": "dist/productselector.html",
                "height": 50,
				"inputs": [
				    {
                        "id":"FieldName",
                        "name": "Select the user field for this control. Must be 'Text (multiple lines)' ie 'HTML'",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["HTML"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    },
                    {
                        "id":"FieldNameKey",
                        "name": "Select the data field for this control. Must be 'Text (multiple lines)' ie 'HTML'. This is not visible by the user and stores the backend data key references.",
                        "type": "WorkItemField",
                        "properties": {
                            "workItemFieldTypes": ["HTML"]
                        },
                        "validation": {
                            "dataType": "String",
                            "isRequired": true
                        }
                    }
				]
            }
        },
        {
            "id": "products-hub",
            "type": "ms.vss-web.hub",
            "description": "Adds the products editing hub to the preferences.",
            "targets": [
                "ms.vss-web.project-admin-hub-group"
                ],
            "properties": {
                "name": "Products",
                "order": 99,
                "uri": "dist/productshub.html"
            }
        },
        {
            "id": "form-selector-dialog",
            "type": "ms.vss-web.control",
            "description": "The content to be displayed in the dialog",
            "targets": [],
            "properties": {
                "uri": "dist/formselectordialog.html?key={{productKey}}"
            }
        }
    ]
}
